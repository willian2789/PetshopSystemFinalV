@model IEnumerable<TCC.Models.ModelProdutoCompra>

@{
    Layout = null;
}


<style>
    body {
        margin: 0 !important;
        padding: 0 !important;
        box-sizing: border-box;
    }

    main {
        display: flex;
    }

    .dashboard {
        height: 100vh;
        background: linear-gradient(97.78deg, #F26457 -7.58%, #960036 111.37%);
    }

    .section-user {
        margin: 2rem;
        display: flex;
        align-items: center;
        text-align: center;
        width: 300px;
        gap: 8px;
        margin-bottom: 2rem;
    }

        .section-user img {
            border-radius: 50%;
            width: 50px;
            height: 50px;
            background: #fff;
            padding: 3px;
        }

    .button {
        width: 100%;
        background: transparent;
        text-align: left;
        padding-left: 2rem;
        font-size: 16px;
        cursor: pointer;
        border: none;
        color: #fff;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .button a {
            color: #fff;
            font-weight: bold;
            display: block !important;
            width: 100%;
            height: 100%;
            text-decoration: none;
            padding: 10px;
        }

        .button:hover {
            background: #00000020;
        }

        .button img {
            filter: invert();
            width: 30px;
            height: 30px;
        }

    #selected {
        background: #00000050;
    }

    .section-user span {
        color: #fff;
        font-weight: 500;
        font-size: 18px;
    }

    .content {
        flex: 4;
        padding: 4rem;
        background: #fff !important;
        overflow: scroll !important;
        height: 100vh;
    }

        .content h1 {
            margin-bottom: 2rem;
            color: #272727;
        }

    .buttonEditar a {
        padding: 10px;
        display: block;
        width: 100%;
        height: 100%;
        text-decoration: none;
        font-weight: bold;
        color: #960036;
        transition: .1s ease-in-out;
    }

        .buttonEditar a:hover {
            color: #fff;
            background: #960036;
        }

    .button-back {
        margin-top: 1rem;
    }




    .container-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        grid-gap: 1rem;
    }

    .menu {
        position: absolute;
        top: 2rem;
        right: 2rem;
        width: 24px;
        height: 24px;
        display: none;
    }

    .close {
        position: absolute;
        z-index: 99999999999999999 !important;
        top: 2rem;
        right: 2rem;
        width: 24px;
        height: 24px;
        opacity: 0;
        visibility: hidden;
        filter: invert();
        transition: .4s ease-in-out;
    }

    .item-compra {
        margin-bottom: 2rem;
        background: #f1f1f1;
    }

        .item-compra strong {
            margin-right: 8px;
            display: inline;
            color: #272727;
        }

        .item-compra span {
            display: block;
        }

        .item-compra h2 {
            padding: .5rem;
            text-align: center;
            color: #fff;
            background: #474747;
        }

    .item-compra-content {
        display: flex;
        flex-direction: column;
        gap: 8px;
        padding: 1rem 2rem;
    }

        .item-compra-content a {
            width: 20%;
            font-size: 16px;
            padding: 1rem;
            background: #474747;
            text-align: center;
            color: #fff;
            text-decoration: none;
            font-weight: bold;
        }
</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Produtos da Compra - AnimalCity</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Styles/responsividadeProdutoDaCompra.css" />
    <style>

        * {
            margin: 0;
            padding: 0;
        }

        body {
            font-family: sans-serif;
            background-color: #f1f1f1;
        }

        .content{
            background: #f1f1f1 !important;
            padding: 2rem !important;
            overflow: hidden !important;
        }

        .container {
            display: flex;
            flex-direction: column;
            padding: 0rem 6rem;
        }

        .header {
            margin: 4rem 2rem;
        }

            .header a {
                padding: 20px;
                color: #272727;
                font-size: 20px;
                text-decoration: none;
                font-weight: bold;
            }

        .container-item {
            margin-bottom: 2rem;
            border-radius: .5rem;
            height: 200px;
            display: flex;
            background-color: #fff;
            box-shadow: 0px 100px 80px rgba(0, 0, 0, 0.07), 0px 12.5216px 10.0172px rgba(0, 0, 0, 0.035);
        }

        .img-item {
            position: relative;
            width: 200px;
            height: 100%;
        }

            .img-item img {
                border-radius: .5rem 0rem 0rem .5rem;
                object-fit: cover;
                width: 100%;
                height: 100%;
            }
        .container-content span{
            font-weight: 300;
        }

        .container-content {
            padding: 2rem;
            display: flex;
            flex-direction: column;
            gap: .5rem;
        }

            .container-content h4 {
                font-size: 24px;
                color: #272727;
            }

            .container-content strong {
                font-size: 24px;
                color: #474747;
            }

        hr {
            background-color: #c4c4c4;
            width: 100%;
            height: 2px;
        }

        .total-value {
            display: block;
            margin: 4rem 2rem;
            font-size: 24px;
        }
    </style>
</head>
<body>
    <section class="header">
        @Html.ActionLink("Voltar", "ListarCompras", "Cliente")
    </section>
    <div class="container">
        <div class="content">

            @foreach (var item in Model)
            {
                <div class="container-item">
                    <div class="img-item">
                        <img src="https://github.com/kauan777.png" />
                    </div>

                    <div class="container-content">
                        <span>@item.ds_categoria</span>
                        <h4>@item.nm_produto - @item.marca_produto</h4>
                        <strong>R$ @item.vl_produto</strong>
                    </div>
                </div>
            }
            <hr />

            @{
                int i = 1;

                foreach (var item in Model)
                {
                    while (i < 2)
                    {
                        <strong class="total-value">Valor total: R$ @item.vl_total</strong>
                            i++;
                        }

                    }
                }



        </div>
</body>
</html>
